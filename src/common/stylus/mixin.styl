bg_image($url)
  background-image: url($url)
  background-size: 100% 100%

btn($width,$height,$font-size,$bgcolor,$textcolor,$border-radius)
  text-align: center
  border: none
  outline none
  padding: 0
  display: block
  width:$width
  height:$height
  font-size $font-size
  line-height: $height
  background: $bgcolor
  color:$textcolor
  border-radius: $border-radius

bd($color)
  border:1px solid $color

bd_bt($color)
  border-bottom:1px solid $color

bd_r($px)
  border-radius $px 

flex_row()
  display flex
  flex-direction row
  
flex_column()
  display flex
  flex-direction column

one_txt_cut()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
  
two_txt_cut()
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break break-all
  overflow: hidden;
  white-space normal 

bg_linear()
  //  background:linear-gradient(to right, #ffa532, #ff6d38)
  background: linear-gradient(-90deg, #ff9d22 0%, #ffc22f 100%), linear-gradient(#c3c3c3, #c3c3c3);

bg_linear_()
  background-image: linear-gradient(to right, #ffb125, #ff7031);
bgc($color)
  background:$color 

extend_click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
